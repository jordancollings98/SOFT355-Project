extends genericLayout
html
block content
  .container.pageCenter
    h1.pageTitle Register Here!
    img.userImage(src="user_image.png" alt="User Image")
    br
    form(role='form', class='formCenter', action="/register", method="post")
      .form-group
          input.form-control(type='text', name="username", placeholder='Enter Username')
      .form-group
        input.form-control(type='password', name="password", placeholder='Password')
      button.btn.btn-secondary(type='submit') Submit
        &nbsp;
      a(href='/')
        button.btn.btn-danger#cancel(type="button") Cancel